class Main 
{
   public static void main(String[] args)
   {
      FootballBot footballBot = new FootballBot();
      SoccerBot SoccerBot = new SoccerBot();
      GolfBot GolfBot = new GolfBot();
      CaddieBot CaddieBot = new CaddieBot();
